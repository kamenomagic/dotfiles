set $mod Mod1
set $ws1 "1. "
set $ws2 "2. "
set $ws3 "3"
set $ws4 "4. "
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+Shift+t exec terminator
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+c reload
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+q kill
bindsym $mod+F4 kill
bindsym $mod+Shift+r restart
bindsym $mod+Shift+space floating toggle
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev
bindsym $mod+o exec rofi -show run
bindsym $mod+a focus parent
bindsym $mod+b layout stacking
bindsym $mod+i split h
bindsym $mod+minus split v
bindsym $mod+f fullscreen global
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+m move workspace to output left
bindsym $mod+r mode "resize"
bindsym $mod+s layout toggle split
bindsym $mod+space focus mode_toggle
bindsym $mod+t layout tabbed
bindsym $mod+y mode "$system"
bindsym XF86AudioRaiseVolume exec amixer -D pulse sset Master 5%+
bindsym XF86AudioLowerVolume exec amixer -D pulse sset Master 5%-
bindsym XF86AudioMute exec amixer -D pulse sset Master 1+ toggle
bindsym XF86MonBrightnessUp exec brightness 10
bindsym XF86MonBrightnessDown exec brightness -10
bindsym $mod+p exec xinput enable `xinput | grep TouchPad | awk '{print $6}' | awk -F'=' '{print $2}'`
bindsym $mod+Shift+p exec xinput disable `xinput | grep TouchPad | awk '{print $6}' | awk -F'=' '{print $2}'`
bindsym Print exec scrot -e 'mv $f /tmp/ && feh /tmp/$f'
set $system System: [l]ock [e]xit
mode "$system" {
    bindsym l exec i3lock -i ~/wallpaper.png, mode "default"
    bindsym e exit, mode "default"
    bindsym q mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt
    bindsym q mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
font pango:System San Francisco Display 7
bar {
    font pango:System San Francisco Display 7
    tray_output none
    status_command i3blocks -c ~/.i3/i3blocks.conf
}
assign [class="Terminator"] $ws1
assign [class="Chromium-browser"] $ws2
assign [class="Slack"] $ws4
client.focused          #073642 #073642 #cb4b16 #cb4b16
exec --no-startup-id nm-applet
exec_always --no-startup-id feh --bg-scale ~/wallpaper.png
exec --no-startup-id xrandr --output VGA-1 --auto --right-of DP-2
workspace $ws1 output DP-2
workspace $ws2 output VGA-1
